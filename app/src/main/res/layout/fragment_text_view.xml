<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="16dp"
    android:paddingBottom="20dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/widget_image_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/document_word_icon"
        />


    <TextView
        android:id="@+id/widget_test_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:layout_marginLeft="12dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:textColor="#FF333333"
        android:textSize="14dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="C://document/hello/everything.pdfC://document/hello/everything.pdfC://document/hello/everything.pdfC://document/hello/everything.pdfC://document/hello/everything.pdf" />

    <TextView
        android:id="@+id/widget_suffix_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:textSize="14dp"
        android:maxLength="4"
        android:text="pdf"
        />

</LinearLayout>